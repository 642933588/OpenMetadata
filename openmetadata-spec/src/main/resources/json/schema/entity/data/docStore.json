{
  "$id": "https://open-metadata.org/schema/entity/data/docStore.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DocStore",
  "description": "This schema defines the type of Document Store.",
  "type": "object",
  "javaType": "org.openmetadata.schema.entity.data.doc.DocStore",
  "javaInterfaces": ["org.openmetadata.schema.EntityInterface"],
  "definitions": {
    "docStoreType": {
      "javaType": "org.openmetadata.schema.entity.data.doc.DocStoreType",
      "description": "Type of the Doc Store",
      "type": "string",
      "enum": ["Article", "QuickLink"]
    },
    "quickLink": {
      "javaType": "org.openmetadata.schema.entity.data.doc.QuickLink",
      "description": "Quick Link Document Store",
      "type": "object",
      "properties": {
        "url": {
          "description": "The URL or destination of the Quick Link",
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["uri"],
      "additionalProperties": false
    },
    "article": {
      "javaType": "org.openmetadata.schema.entity.data.doc.Article",
      "description": "Article Document Store",
      "type": "object",
      "properties": {
        "authors": {
          "description": "The author(s) of the article.",
          "$ref": "../../type/entityReferenceList.json"
        },
        "publicationDate": {
          "description": "The publication date of the article.",
          "type": "string",
          "format": "date"
        },
        "relatedArticles": {
          "description": "An array of related articles.",
          "$ref": "../../type/entityReferenceList.json"
        }
      },
      "additionalProperties": false
    },
    "doc" : {
      "javaType": "org.openmetadata.schema.entity.data.doc.Doc",
      "description": "Doc Store Schema",
      "type": "object",
      "oneOf": [
        {
          "$ref": "#/definitions/quickLink"
        },
        {
          "$ref": "#/definitions/article"
        }
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "id": {
      "description": "Unique identifier of the Document Store.",
      "$ref": "../../type/basic.json#/definitions/uuid"
    },
    "name": {
      "description": "Name of a the Document Store.",
      "$ref": "../../type/basic.json#/definitions/entityName"
    },
    "fullyQualifiedName": {
      "description": "Fully qualified name of a Document Store.",
      "$ref": "../../type/basic.json#/definitions/fullyQualifiedEntityName"
    },
    "displayName": {
      "description": "Display Name that identifies this Document Store. It could be title or label.",
      "type": "string"
    },
    "description": {
      "description": "Description of a Document Store.",
      "$ref": "../../type/basic.json#/definitions/markdown"
    },
    "version": {
      "description": "Metadata version of the entity.",
      "$ref": "../../type/entityHistory.json#/definitions/entityVersion"
    },
    "updatedAt": {
      "description": "Last update time corresponding to the new version of the entity in Unix epoch time milliseconds.",
      "$ref": "../../type/basic.json#/definitions/timestamp"
    },
    "updatedBy": {
      "description": "User who updated the Document Store.",
      "type": "string"
    },
    "href": {
      "description": "Link to this Document Store.",
      "$ref": "../../type/basic.json#/definitions/href"
    },
    "changeDescription": {
      "description": "Change that lead to this version of the entity.",
      "$ref": "../../type/entityHistory.json#/definitions/changeDescription"
    },
    "owner": {
      "description": "Owner of this Document Store.",
      "$ref": "../../type/entityReference.json",
      "default": null
    },
    "followers": {
      "description": "Followers of this Document Store.",
      "$ref": "../../type/entityReferenceList.json#/definitions/entityReferenceList"
    },
    "votes" : {
      "$ref": "../../type/votes.json"
    },
    "docStoreType" : {
      "$ref": "#/definitions/docStoreType"
    },
    "doc" : {
      "$ref": "#/definitions/doc"
    },
    "tags": {
      "description": "Tags for this Document Store.",
      "type": "array",
      "items": {
        "$ref": "../../type/tagLabel.json"
      },
      "default": null
    },
    "deleted": {
      "description": "When `true` indicates the entity has been soft deleted.",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["id", "name", "docStoreType", "doc"],
  "additionalProperties": false
}